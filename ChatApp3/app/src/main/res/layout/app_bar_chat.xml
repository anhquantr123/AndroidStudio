<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorGreen">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userProfileImageAppbarChat"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/usernameAppbarTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Username"
            android:textColor="@color/colorWhile"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/userProfileImageAppbarChat"
            app:layout_constraintTop_toTopOf="@+id/userProfileImageAppbarChat" />

        <TextView
            android:id="@+id/usernameTrangThaiHoatDong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Online 1 phút trước"
            android:textColor="@color/colorWhile"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/usernameAppbarTitel"
            app:layout_constraintStart_toStartOf="@+id/usernameAppbarTitel"
            app:layout_constraintTop_toBottomOf="@+id/usernameAppbarTitel" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>